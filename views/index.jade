//p(style="line-height:30px; width: 100px; background-color: blue; color:white; text-align:center") Coding
//p(style="line-height:30px; width: 100px; background-color: #d8d8d8; text-align:center") Not Coding

div
  each hour in hours
    each minute in minutes
      - if (minute === 0 && hour % 3 === 0 && hour !== 0)
        div(style="float:left; background-color: #d8d8d8; z-index: 10; position: relative; width: 1px; color:") #{(hour > 12) ? hour - 12 + 'pm' : (hour === 12) ? 'Noon' : hour + 'am'}
      - else
        div(style="float:left; background-color: #d8d8d8;width: 1px;") &nbsp;
  p(style="color: white; padding-bottom: 2em") .

each day, d in result
  - if (d == 0)
    p= 'Today, ' + day.total + ' minutes'
  - else if (d == 1)
    p= 'Yesterday, ' + day.total + ' minutes'
  - else
    p= d + ' days ago, ' + day.total + ' minutes'

  div
    each hour in hours
      each minute in minutes
        - if (day[hour]['minutes'] && day[hour]['minutes'][minute])
          div(style="float:left; background-color: blue; width: 1px;")  &nbsp;
        - else
          div(style="float:left; background-color: #d8d8d8;width: 1px;") &nbsp;
  p(style="color: white") .
